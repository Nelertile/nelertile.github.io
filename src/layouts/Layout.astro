---
interface Props {
  title: string;
}

const { title } = Astro.props;

import Header from "../components/Header.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Nelertile's Website" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
  </body>
</html>
<style is:global lang="scss">
  $foreground: #d2dae2;
  $background: #1e272e;
  $primary: #0be881;
  $secondary: #05c46b;
  $tertiary: #575fcf;
  $light-gray: #808e9b;
  $dark-gray: #485460;

  @import url("https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&display=swap");

  body {
    width: 100%;
    height: 100%;
    background-color: $background;
    color: $foreground;
    font-family: "Outfit", sans-serif;
    font-optical-sizing: auto;
    font-weight: 400;
    font-style: normal;
    margin: 0;
  }

  #gradient-text {
    background: linear-gradient(
      180deg,
      rgba(11, 232, 129, 1) 0%,
      rgba(0, 61, 33, 1) 100%
    );
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  #italic {
    font-style: italic;
  }
  h1 {
    text-align: center;
    font-size: 4em;
  }

  p {
    text-align: center;
    font-size: 1em;
    margin-left: 10px;
    margin-right: 10px;
  }

  .ul {
    p {
      margin: 0;
    }
  }

  a {
    text-decoration: none;
    color: $foreground;
    transition: 0.3s;
    &:hover {
      color: $primary;
    }
  }
</style>
